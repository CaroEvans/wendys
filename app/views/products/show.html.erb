
<p>
  <strong>Name:</strong>
  <%= @product.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @product.description %>
</p>

<p>
  <strong>Price:</strong>
  <%= @product.price %>
</p>

<p>
  <strong>Tag:</strong>
  <%= @product.tag %>
</p>

<% if  user_signed_in? %>
<td><%= link_to 'Edit', edit_product_path(@product) %></td>
<td><%= link_to 'Destroy', @product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
<% end %>
<%= link_to 'Back', products_path %>
